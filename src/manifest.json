{
    "name": "Link Diver",
    "version": "1.0",
    "description": "A link diver tool for chrome.",
    "manifest_version": 2,
    "browser_action": {},
    "background" : {
        "scripts": ["assets/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["assets/content.js", "assets/highlight-links.js"],
            "css": ["assets/highlight.css"]
        }
    ],
    "permissions": ["activeTab", "contextMenus", "downloads", "storage"]
}
